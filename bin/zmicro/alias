#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro lima <args ...>"
  echo ""

  lima --help
}

version() {
  lima version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    lima "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
